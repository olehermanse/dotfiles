{
  "theme": "One Dark",
  "vim_mode": false,
  "preferred_line_length": 80,
  "format_on_save": "off",
  "show_whitespaces": "boundary",
  "soft_wrap": "editor_width",
  "enable_language_server": true,
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "enabled": true,
    "button": true,
  },
  "prettier": {
    "allowed": false
  },
  "formatter": {
    "external": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    }
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "black",
          "arguments": [
            "-"
          ]
        }
      }
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "deno",
          "arguments": [
            "fmt",
            "-"
          ]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JSONC": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "CSS": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
